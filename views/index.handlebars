<h1>Eat the burger!</h1>

<div class="row">
    <div class="col-6">
<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-6">
<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<div class="row">

<form class="create-form">

  <div class="form-group">
    <label for="ca">What burger would you like to eat?</label>
    <textarea type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>
