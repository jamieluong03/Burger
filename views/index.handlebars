<div class="container">
  <div class="row">
    <div class="col-12 text-centner" id="top-bar">
    <h1>Eat the burger!</h1>
    <img src="/assets/img/burger.png" alt="burger" />
    </div>
  </div>

<div class="row">
    <div class="col-6">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-6">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<div class="row">

<form class="create-form">

  <div class="form-group">
    <label for="ca">What burger would you like to eat?</label>
    <textarea type="text" id="ca" name="name"></textarea>
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>
</div>