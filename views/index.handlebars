<div class="container">
  <div class="row">
    <div class="col-12 text-center" id="top-bar">
    <h1>Eat the burger!</h1>
    <img src="/assets/img/burger.png" alt="burger" />
    </div>
  </div>

<div class="row">
    <div class="col-6 text-center">
      <h3>Burgers to eat:</h3>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      {{> burger/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-6 text-center">
  <h3>Burgers eaten</h3>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      {{> burger/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>

<div class="container">
<div class="row">
<div class="col-12 text-center enter_section">
  <p>What burger would you like to eat?</p>
  <form action="/" method="POST">
    <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
    <button type="submit" class="btn btn-primary" id="text-enter-button">Add Burger</button>
  </form>
</div>
</div>
</div>
